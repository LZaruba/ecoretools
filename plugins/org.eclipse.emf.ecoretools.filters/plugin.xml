<plugin>
	<extension-point id="filteredDiagramType" name="org.eclipse.emf.ecoretools.filters.filteredDiagramType" schema="schema/filteredDiagramType.exsd"/>
	
	<extension point="org.eclipse.gmf.runtime.common.ui.services.action.contributionItemProviders">
   		<contributionItemProvider
           checkPluginLoaded="false"
           class="org.eclipse.emf.ecoretools.filters.internal.providers.FilteredDiagramContributionItemProvider">
         	<Priority name="Low">
         	</Priority>       	
         	<partContribution
               	class="org.eclipse.gmf.runtime.diagram.ui.parts.IDiagramWorkbenchPart">
            	<partAction
                   global="false"
                   id="diagramFilterActionMenu"
                   toolbarPath="/toolbarFilterGroup">
            	</partAction>
         	</partContribution>
          <popupContribution
                class="org.eclipse.gmf.runtime.diagram.ui.providers.DiagramContextMenuProvider">
             <popupStructuredContributionCriteria
                   objectClass="org.eclipse.gmf.runtime.diagram.ui.editparts.IGraphicalEditPart">
             </popupStructuredContributionCriteria>
             <popupAction
                   id="hideSelectionAction"
                   path="/filtersMenu/miscellaneousGroup">
             </popupAction>
             <popupAction
                   id="hideTypeAction"
                   path="/filtersMenu/miscellaneousGroup">
             </popupAction>
             <popupAction
                   id="hideSemanticAction"
                   path="/filtersMenu/miscellaneousGroup">
             </popupAction>
             <popupAction
                   id="showHiddenPartAction"
                   path="/filtersMenu/miscellaneousGroup">
             </popupAction>
             <popupAction
                   id="hideInheritanceTypeAction"
                   path="/filtersMenu/additions">
             </popupAction>
             <popupAction
                   id="hideReferenceTypeAction"
                   path="/filtersMenu/additions">
             </popupAction>
          </popupContribution>
      	</contributionItemProvider>
    </extension>
    
</plugin>
